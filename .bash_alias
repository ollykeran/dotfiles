alias vi=nvim
alias vim=nvim
alias svi='sudo vi'
alias ranger="yazi"

# Stop after sending count ECHO_REQUEST packets #
alias ping='ping -c 5'
# Do not wait interval 1 second, go fast #
alias fastping='ping -c 100 -s.2'

#dirs
alias ls="eza -al --color -h --group-directories-first"
## how can we set this only if eza is installed?
#alias ls='ls -al --color -h --group-directories-first'
alias ..="cd .."
alias ...="cd .. && cd .."
alias ....="cd .. && cd .. && cd .."
alias .....="cd .. && cd .. && cd .. && cd .."

#show deletes
alias rmdir="rm -rfvI"
alias rm="rm -vI"

# disk
alias du='du -h'
alias df='df -h'

# less w/ colours
alias less="less -r -N"

#ports
alias ports='netstat -natp'

#count files
alias countfiles='find . -type f | wc -l'
alias updatedb="sudo updatedb --prunepaths=/mnt"
alias updatewindb="sudo updatedb"

alias locate="locate -ip"
alias man="man -a"
alias ps="ps -wef f"
alias pgrep="pgrep -af"

alias sl="ls -al --color -h --group-directories-first"
#gets largest files
alias ducks="du -cksh --threshold=1G * | sort -rn"
#for when the ducks failed 
alias duck="for i in G M K; do    du -ah | grep [0-9]$i | sort -nr -k 1; done | head -n 11"
#less end of file
alias end="less +G -N"
#follow 
alias podman='podman-remote-static-linux_amd64'
alias follow="less +F -N"
alias uppies="sudo apt update && sudo apt upgrade -y && sudo apt autoremove"
